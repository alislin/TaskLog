@inherits TodoLogEditBase
<div class="form-group">
    <textarea @bind-value="@TodoLog.Report" @bind-value:event="oninput" placeholder="输入记录内容" class="form-control" rows="5" @onkeyup="@(OnKeyUp)"></textarea>
</div>
<div class="form-group">
    <input type="text" placeholder="项目Id" class="form-control" @bind-value="TodoLog.ProjcectId" />
</div>
<div class="form-group">
    <input type="text" placeholder="任务Id" class="form-control" @bind-value="TodoLog.TodoId" />
</div>
<div class="form-group">
    <input type="text" placeholder="创建时间" class="form-control" @bind-value="TodoLog.Created" />
</div>
<div class="form-group">
    @TodoLog.Report
</div>
<div class="form-group">
    <StrapButton CommandAction="UpdateValue">保存</StrapButton>
    <StrapButton CommandAction="Reset" Style="StyleType.danger">重置</StrapButton>
</div>
